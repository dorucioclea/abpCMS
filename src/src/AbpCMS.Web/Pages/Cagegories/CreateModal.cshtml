@page
@using Microsoft.AspNetCore.Mvc.Localization
@using AbpCMS.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using AbpCMS.Web.Pages.Cagegories
@using AbpCMS.Cagegories;
@using System.Globalization
@inject IHtmlLocalizer<AbpCMSResource> L
@model CreateModalModel
@{
    Layout = null;
}
<form data-ajaxForm="true" asp-page="/Cagegories/CreateModal" autocomplete="off">
    <abp-modal>
        <abp-modal-header title="@L["NewCagegory"].Value"></abp-modal-header>

        <abp-modal-body>
            
            <abp-input asp-for="Cagegory.Name"/>

            <abp-input asp-for="Cagegory.IsActive"/>

            
        </abp-modal-body>

        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>